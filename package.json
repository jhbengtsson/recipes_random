        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "jest": "^29.2.2",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "node-fetch": "^3.2.10",
